    <script>

        function showCustomAlert() {
            const customAlert = document.createElement('div');
            customAlert.className = 'custom-alert';

            const alertText = document.createElement('p');
            alertText.textContent = 'Please select a date not before today.';

            const okButton = document.createElement('button');
            okButton.textContent = 'OK';
            okButton.addEventListener('click', function () {
                window.location.href = '/postRequestCab';
            });

            customAlert.appendChild(alertText);
            customAlert.appendChild(okButton);

            document.body.appendChild(customAlert);

            // Add CSS to position the alert on top
            customAlert.style.position = 'fixed';
            customAlert.style.top = '8%';
            customAlert.style.left = '20%';
            customAlert.style.transform = 'translate(-50%, -50%)';
            customAlert.style.zIndex = '9999';
        }

        function validateDate() {
            let inputDate = document.getElementById("date").value;
            let today = new Date().toISOString().split('T')[0];

            if (inputDate < today) {
                showCustomAlert();
                return false;
            }

            return true;
        }
    </script>

